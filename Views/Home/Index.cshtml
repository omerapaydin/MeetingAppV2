@model List<Meeting>

<div class="container mt-4">
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Henüz bir toplantı eklenmedi. Yeni bir toplantı oluşturmak için aşağıdaki butona tıklayın.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var meet in Model)
            {
                <div class="col-md-4 mb-4 d-flex">
                    <div class="card shadow-sm w-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@meet.Name</h5>
                            <p class="card-text text-muted">
                                @meet.Description
                            </p>
                            <p class="text-end mb-1"><small class="text-muted">Zaman: @meet.Time</small></p>
                            <a asp-controller="Home" asp-action="Join" asp-route-id="@meet.Id" class="btn btn-success mt-auto">Join</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="d-grid gap-2 mt-4">
        <a asp-controller="Home" asp-action="Create" class="btn btn-primary btn-lg">Create New Meeting</a>
    </div>
</div>