@model List<User>

<main class="text-center">
    <h1 class="h4">Toplantıya Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
            <td>Ad</td> 
            <td>Email</td> 
            <td>Katılım Durumu</td> 
            <td></td> 
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model){
                var durum = user.IsOkey == true ? "Evet": "Hayır";
                var className = user.IsOkey == true ? "table-success":"table-danger";
               
            <tr class="@className">
                <td>@user.Name</td>
                <td>@user.Phone</td>
                <td>@durum</td>
                <td><a class="btn btn-sm btn-primary" asp-controller="Meeting" asp-action="Details" asp-route-id="@user.Id">Detay</a></td>
            </tr>
            }
        </tbody>
    </table>

    



</main>